<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/coursePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/courses" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_toEndOf="@+id/coursePhoto"
        android:layout_toRightOf="@+id/coursePhoto"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Human Resource Management"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/courseUniver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/coursePhoto"
        android:layout_toRightOf="@+id/coursePhoto"
        android:layout_below="@id/courseName"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="University of Minnesota"
        android:textColor="@color/black"
        android:layout_marginLeft="17dp" />

</RelativeLayout>